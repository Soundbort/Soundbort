{
  "name": "soundbort",
  "version": "0.5.0",
  "description": "Soundboard Discord bot derived from TrixieBot's soundboard implementation!",
  "homepage": "https://github.com/LonelessCodes/Soundbort",
  "author": "Loneless (https://loneless.art)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LonelessCodes/Soundbort.git"
  },
  "bugs": {
    "url": "https://github.com/LonelessCodes/Soundbort/issues"
  },
  "license": "GPL-3.0",
  "keywords": [
    "discord",
    "bot",
    "soundboard"
  ],
  "dependencies": {
    "@discordjs/builders": "=0.7.0",
    "@discordjs/collection": "^0.3.1",
    "@discordjs/opus": "^0.6.0",
    "@discordjs/voice": "^0.7.2",
    "@top-gg/sdk": "^3.1.2",
    "bufferutil": "^4.0.3",
    "canvas": "^2.8.0",
    "chalk": "^4.1.2",
    "color": "^4.0.1",
    "comlink": "^4.3.1",
    "cron": "^1.8.2",
    "discord.js": "^13.3.1",
    "diskusage": "^1.1.3",
    "dotenv": "^10.0.0",
    "escape-string-regexp": "^5.0.0",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^10.0.0",
    "mongodb": "^4.1.2",
    "nanoid": "^3.1.23",
    "node-fetch": "^3.0.0",
    "query-string": "^7.0.1",
    "sodium": "^3.0.2",
    "temp": "^0.9.4",
    "topgg-autoposter": "^2.0.0",
    "utf-8-validate": "^5.0.5",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/color": "^3.0.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/fs-extra": "^9.0.12",
    "@types/mime": "^2.0.3",
    "@types/node": "^16.9.1",
    "@types/temp": "^0.9.1",
    "@types/tmp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "tiny-typed-emitter": "^2.1.0",
    "ts-node": "^10.1.0",
    "type-fest": "^2.3.2",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">= 16.13.0"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "build:docker": "docker build -t loneless/soundbort .",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "start:docker": "docker run $(for var in $(cat .env); do echo \"-e $var\"; done) loneless/soundbort",
    "start:watch": "NODE_ENV=development node --loader ts-node/esm src/index.ts",
    "start:devel": "NODE_ENV=development node --unhandled-rejections=strict dist/index.js",
    "start": "NODE_ENV=production node dist/index.js",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:push": "git push --follow-tags origin main && git checkout stable && git merge main && git push --follow-tags origin stable && git checkout main",
    "health": "curl -f http://localhost:6969/ || exit 1"
  },
  "type": "module"
}
