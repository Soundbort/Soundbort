{
  "name": "soundbort",
  "version": "0.8.3",
  "description": "Soundboard Discord bot derived from TrixieBot's soundboard implementation!",
  "homepage": "https://github.com/Soundbort/Soundbort",
  "author": "Loneless (https://loneless.art)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soundbort/Soundbort.git"
  },
  "bugs": {
    "url": "https://github.com/Soundbort/Soundbort/issues"
  },
  "license": "GPL-3.0",
  "keywords": [
    "discord",
    "bot",
    "soundboard"
  ],
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.15.0",
    "@napi-rs/canvas": "^0.1.30",
    "@top-gg/sdk": "^3.1.3",
    "bufferutil": "^4.0.6",
    "chalk": "^4.1.2",
    "color": "^4.2.3",
    "comlink": "^4.3.1",
    "concat-stream": "^2.0.0",
    "cron": "^1.8.2",
    "discord.js": "^14.8.0",
    "diskusage": "^1.1.3",
    "dotenv": "^16.0.3",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.0",
    "mongodb": "^4.10.0",
    "nanoid": "^3.3.1",
    "node-fetch": "^2.6.7",
    "sodium-native": "^4.0.1",
    "temp": "^0.9.4",
    "tiny-typed-emitter": "^2.1.0",
    "topgg-autoposter": "^2.0.1",
    "utf-8-validate": "^6.0.3",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/color": "^3.0.3",
    "@types/concat-stream": "^2.0.0",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.14",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.8.4",
    "@types/node-fetch": "^2.6.2",
    "@types/temp": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.20.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "rimraf": "^4.4.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "type-fest": "^3.6.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">= 18.10.0",
    "npm": ">= 8.19.0"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "build:docker": "docker build -t loneless/soundbort .",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "start:docker": "docker run $(for var in $(cat .env); do echo \"-e $var\"; done) loneless/soundbort",
    "start:car": "NODE_ENV=development NODE_OPTIONS='--trace-warnings' ts-node --project tsconfig.json src/index.ts",
    "start:devel": "NODE_ENV=development node --unhandled-rejections=strict --trace-warnings --enable-source-maps dist/index.js",
    "start": "NODE_ENV=production node --enable-source-maps dist/index.js",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:push": "git push --follow-tags origin main && git checkout stable && git merge main && git push --follow-tags origin stable && git checkout main",
    "health": "curl -f http://localhost:6969/ || exit 1"
  }
}
