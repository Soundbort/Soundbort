{
  "name": "soundbort",
  "version": "0.9.0",
  "description": "Soundboard Discord bot derived from TrixieBot's soundboard implementation!",
  "type": "module",
  "homepage": "https://github.com/Soundbort/Soundbort",
  "author": "Loneless (https://loneless.art)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soundbort/Soundbort.git"
  },
  "bugs": {
    "url": "https://github.com/Soundbort/Soundbort/issues"
  },
  "license": "GPL-3.0",
  "keywords": [
    "discord",
    "bot",
    "soundboard"
  ],
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.16.0",
    "@napi-rs/canvas": "^0.1.40",
    "@top-gg/sdk": "^3.1.5",
    "bufferutil": "^4.0.7",
    "chalk": "^5.2.0",
    "color": "^4.2.3",
    "comlink": "^4.4.1",
    "concat-stream": "^2.0.0",
    "cron": "^2.3.0",
    "discord.js": "^14.9.0",
    "diskusage": "^1.1.3",
    "dotenv": "^16.0.3",
    "escape-string-regexp": "^5.0.0",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.1",
    "mongodb": "^4.16.0",
    "nanoid": "^4.0.2",
    "sodium-native": "^4.0.1",
    "temp": "^0.9.4",
    "tiny-typed-emitter": "^2.1.0",
    "topgg-autoposter": "^2.0.1",
    "utf-8-validate": "^6.0.3",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "zlib-sync": "^0.1.8"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.3",
    "@types/color": "^3.0.3",
    "@types/concat-stream": "^2.0.0",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.2",
    "@types/temp": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "rimraf": "^5.0.0",
    "standard-version": "^9.5.0",
    "tsx": "^3.12.6",
    "type-fest": "^3.9.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">= 18.10.0",
    "npm": ">= 8.19.0"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "docker:build": "docker build -t loneless/soundbort .",
    "docker:run": "docker run $(for var in $(cat .env); do echo \"-e $var\"; done) loneless/soundbort",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "deploy": "NODE_ENV=development tsx --trace-warnings src/deploy.ts",
    "dev": "NODE_ENV=development tsx --trace-warnings src/index.ts",
    "preview": "NODE_ENV=development node --trace-warnings --enable-source-maps dist/index.js",
    "start": "NODE_ENV=production node --enable-source-maps dist/index.js",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:push": "git push --follow-tags origin main && git checkout stable && git merge main && git push --follow-tags origin stable && git checkout main",
    "health": "curl -f http://localhost:6969/ || exit 1"
  }
}
